{
  "name": "mikro-orm-poc",
  "version": "0.2.0",
  "description": "MikroORM typescript ORM Proof Of Concept + Cypress testing",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/app.ts",
    "dev:debug": "ts-node-dev --inspect=localhost:5001 src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "schema:create": "mikro-orm schema:create -r",
    "schema:update": "mikro-orm schema:update -r",
    "schema:drop": "mikro-orm schema:drop -r",
    "seed:run": "ts-node src/seeders/runSeeders.ts"
  },
  "author": "spinningideas",
  "license": "MIT",
  "dependencies": {
    "@mikro-orm/cli": "^6.4.0",
    "@mikro-orm/core": "^6.4.0",
    "@mikro-orm/migrations": "^6.4.0",
    "@mikro-orm/postgresql": "^6.4.0",
    "@mikro-orm/reflection": "^6.4.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "cypress-plugin-api": "^2.10.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mochawesome": "^7.1.3",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^2.0.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "cypress": "^12.6.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
